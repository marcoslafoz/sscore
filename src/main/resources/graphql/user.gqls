type Query {
    getUserById(id: ID): UserDto
    getCourseListByUserId(userId: ID): [CourseDto]
}

type Mutation {
    createUser(user: UserInputDto): UserDto
}

input UserInputDto {
    username: String
    name: String
    surname: String
    email: String
    password: String
}

type UserDto {
    id: ID
    username: String
    name: String
    surname: String
    email: String
}

type CourseDto {
    id: ID
    name: String
    user_id: String
}
